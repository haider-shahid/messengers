<h2 class="ui center aligned icon medium header">
  <strong>Welcome to Chat Box</strong><em>- a C omplete Chat App</em>
  <br>
  <i class="circular orange power icon"></i>
  Login
</h2>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:session, html:{class:"ui form",role:"form"},url:login_path) do |f| %>
        <div class="field">
          <%= f.label :username, "User Name" %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Username here" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%=f.label :password,"Password" %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder:"Password here" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.button  "Login",class:"ui orange submit button" %>
      <% end %>
    </div>
    <div class="middle aligned column">
      <div class="ui medium orange button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>